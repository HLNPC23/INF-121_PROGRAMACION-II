import json
import os
from datetime import datetime
from typing import List, Optional

class Alimento:
    def __init__(self, nombre: str, fechaVencimiento: str, cantidad: int):
        self.nombre = nombre
        self.fechaVencimiento = fechaVencimiento
        self.cantidad = cantidad
    
    def to_dict(self) -> dict:
        return {
            "nombre": self.nombre,
            "fechaVencimiento": self.fechaVencimiento,
            "cantidad": self.cantidad
        }
    
    @classmethod
    def from_dict(cls, data: dict) -> 'Alimento':
        return cls(data["nombre"], data["fechaVencimiento"], data["cantidad"])
    
    def __str__(self) -> str:
        return f"{self.nombre}: {self.cantidad} unidades (vence: {self.fechaVencimiento})"
    
    def esta_vencido(self, fecha_actual: str = None) -> bool:
        if fecha_actual is None:
            fecha_actual = datetime.now().strftime("%Y-%m-%d")
        return self.fechaVencimiento < fecha_actual


class ArchRefri:
    def __init__(self, archivo: str = "refrigerador.json"):
        self.archivo = archivo
        self.alimentos: List[Alimento] = []
        self.cargar()
    
    def cargar(self):
        if os.path.exists(self.archivo):
            try:
                with open(self.archivo, 'r', encoding='utf-8') as f:
                    datos = json.load(f)
                    self.alimentos = [Alimento.from_dict(d) for d in datos]
            except:
                self.alimentos = []
    
    def guardar(self):
        try:
            with open(self.archivo, 'w', encoding='utf-8') as f:
                datos = [a.to_dict() for a in self.alimentos]
                json.dump(datos, f, indent=4)
            return True
        except:
            return False

    def crear(self, alimento: Alimento):
        self.alimentos.append(alimento)
        self.guardar()
    
    def modificar_por_nombre(self, nombre: str, nuevo_alimento: Alimento):
        for i, alimento in enumerate(self.alimentos):
            if alimento.nombre.lower() == nombre.lower():
                self.alimentos[i] = nuevo_alimento
                self.guardar()
                return True
        return False
    
    def eliminar_por_nombre(self, nombre: str):
        inicial = len(self.alimentos)
        self.alimentos = [a for a in self.alimentos if a.nombre.lower() != nombre.lower()]
        if len(self.alimentos) < inicial:
            self.guardar()
            return True
        return False

    def caducados_antes_de(self, fecha_limite: str):
        return [a for a in self.alimentos if a.fechaVencimiento < fecha_limite]

    def eliminar_cantidad_cero(self):
        inicial = len(self.alimentos)
        self.alimentos = [a for a in self.alimentos if a.cantidad > 0]
        eliminados = inicial - len(self.alimentos)
        if eliminados > 0:
            self.guardar()
        return eliminados
    

    def buscar_vencidos(self, fecha_actual: str = None):
        if fecha_actual is None:
            fecha_actual = datetime.now().strftime("%Y-%m-%d")
        return [a for a in self.alimentos if a.esta_vencido(fecha_actual)]
    

    def alimento_mas_cantidad(self) -> Optional[Alimento]:
        if not self.alimentos:
            return None
        return max(self.alimentos, key=lambda a: a.cantidad)
    
    def mostrar_todos(self):
        print("\n=== ALIMENTOS EN EL REFRIGERADOR ===")
        if not self.alimentos:
            print("El refrigerador está vacío.")
            return
        
        for i, alimento in enumerate(self.alimentos, 1):
            print(f"{i}. {alimento}")


def main():
    archivo = ArchRefri()
    

    if not archivo.alimentos:
        alimentos_ejemplo = [
            Alimento("Leche", "2024-12-15", 2),
            Alimento("Queso", "2024-11-30", 1),
            Alimento("Yogurt", "2024-10-25", 0),
            Alimento("Huevos", "2024-12-01", 12),
            Alimento("Mantequilla", "2024-09-15", 1),
            Alimento("Jamon", "2024-12-10", 3),
            Alimento("Manzanas", "2024-12-20", 5)
        ]
        for alimento in alimentos_ejemplo:
            archivo.crear(alimento)
    
    print("=== SISTEMA DE REFRIGERADOR ===")

    archivo.mostrar_todos()
    

    print("\n1. Alimentos que caducan antes del 2024-12-01:")
    caducados = archivo.caducados_antes_de("2024-12-01")
    for alimento in caducados:
        print(f"  {alimento}")
    

    print("\n2. Eliminando alimentos con cantidad 0...")
    eliminados = archivo.eliminar_cantidad_cero()
    print(f"  Se eliminaron {eliminados} alimentos.")
    

    print("\n3. Alimentos vencidos (fecha actual: 2024-11-20):")
    vencidos = archivo.buscar_vencidos("2024-11-20")
    for alimento in vencidos:
        print(f"  {alimento}")
    

    print("\n4. Alimento con mayor cantidad:")
    mas_cantidad = archivo.alimento_mas_cantidad()
    if mas_cantidad:
        print(f"  {mas_cantidad}")

    print("\n5. Demostración modificar y eliminar:")
    print("  Modificando 'Queso'...")
    archivo.modificar_por_nombre("Queso", Alimento("Queso", "2024-12-31", 2))
    print("  Eliminando 'Mantequilla'...")
    archivo.eliminar_por_nombre("Mantequilla")
    
    print("\nEstado final del refrigerador:")
    archivo.mostrar_todos()


if __name__ == "__main__":
    main()
