import json
import os
from typing import List

class Estudiante:
    def __init__(self, ru: str, nombre: str, paterno: str, materno: str, edad: int):
        self.ru = ru
        self.nombre = nombre
        self.paterno = paterno
        self.materno = materno
        self.edad = edad
    
    def to_dict(self) -> dict:
        return {
            "ru": self.ru,
            "nombre": self.nombre,
            "paterno": self.paterno,
            "materno": self.materno,
            "edad": self.edad
        }
    
    @classmethod
    def from_dict(cls, data: dict) -> 'Estudiante':
        return cls(data["ru"], data["nombre"], data["paterno"], data["materno"], data["edad"])
    
    def __str__(self) -> str:
        return f"{self.ru} - {self.nombre} {self.paterno} {self.materno}"


class Nota:
    def __init__(self, materia: str, notaFinal: float, estudiante: Estudiante):
        self.materia = materia
        self.notaFinal = notaFinal
        self.estudiante = estudiante
    
    def to_dict(self) -> dict:
        return {
            "materia": self.materia,
            "notaFinal": self.notaFinal,
            "estudiante": self.estudiante.to_dict()
        }
    
    @classmethod
    def from_dict(cls, data: dict) -> 'Nota':
        estudiante = Estudiante.from_dict(data["estudiante"])
        return cls(data["materia"], data["notaFinal"], estudiante)
    
    def __str__(self) -> str:
        return f"{self.estudiante.nombre} - {self.materia}: {self.notaFinal}"


class ArchiNota:
    def __init__(self, nombreArchi: str = "notas.json"):
        self.nombreArchi = nombreArchi
        self.notas: List[Nota] = []
        self.cargar_archivo()
    
    def cargar_archivo(self):
        if not os.path.exists(self.nombreArchi):
            return
        
        try:
            with open(self.nombreArchi, 'r', encoding='utf-8') as archivo:
                datos = json.load(archivo)
                self.notas = [Nota.from_dict(d) for d in datos]
        except:
            pass
    
    def guardar_archivo(self):
        try:
            with open(self.nombreArchi, 'w', encoding='utf-8') as archivo:
                datos = [nota.to_dict() for nota in self.notas]
                json.dump(datos, archivo, indent=4)
        except:
            pass
    
    def agregar_varios_estudiantes(self, lista_notas: List[Nota]):
        for nueva_nota in lista_notas:
            for nota_existente in self.notas:
                if (nota_existente.estudiante.ru == nueva_nota.estudiante.ru and 
                    nota_existente.materia == nueva_nota.materia):
                    print(f"Estudiante {nueva_nota.estudiante.ru} ya tiene nota en {nueva_nota.materia}")
                    return False
        
        self.notas.extend(lista_notas)
        self.guardar_archivo()
        return True
    
    def obtener_promedio_notas(self) -> float:
        if not self.notas:
            return 0.0
        
        total = sum(nota.notaFinal for nota in self.notas)
        return total / len(self.notas)
    
    def buscar_mejores_estudiantes(self) -> List[Nota]:
        if not self.notas:
            return []
        
        mejor_nota = max(self.notas, key=lambda n: n.notaFinal).notaFinal
        mejores = [nota for nota in self.notas if nota.notaFinal == mejor_nota]
        return mejores
    
    def eliminar_por_materia(self, materia: str) -> int:
        inicial = len(self.notas)
        self.notas = [nota for nota in self.notas if nota.materia != materia]
        eliminados = inicial - len(self.notas)
        
        if eliminados > 0:
            self.guardar_archivo()
        
        return eliminados
    
    def mostrar_todas_notas(self):
        if not self.notas:
            print("No hay notas registradas.")
            return
        
        for nota in self.notas:
            print(nota)


def main():
    archivo = ArchiNota()

    estudiantes = [
        Estudiante("2023001", "Juan", "Pérez", "García", 20),
        Estudiante("2023002", "María", "Gómez", "López", 21),
        Estudiante("2023003", "Carlos", "Rodríguez", "Martínez", 22)
    ]
    
    materias = ["Matemáticas", "Física", "Programación"]
    
    notas_ejemplo = []
    for i, estudiante in enumerate(estudiantes):
        for j, materia in enumerate(materias):
            nota_valor = 50 + ((i * 10 + j * 5) % 51)
            notas_ejemplo.append(Nota(materia, nota_valor, estudiante))

    print("=== CLASES IMPLEMENTADAS ===")
    print("✓ Estudiante: ru, nombre, paterno, materno, edad")
    print("✓ Nota: materia, notaFinal, estudiante")
    print("✓ ArchiNota: nombreArchi\n")

    print("=== AGREGANDO VARIOS ESTUDIANTES ===")
    if archivo.agregar_varios_estudiantes(notas_ejemplo):
        print("Estudiantes agregados correctamente.\n")

    print("=== TODAS LAS NOTAS ===")
    archivo.mostrar_todas_notas()

    print("\n=== PROMEDIO DE NOTAS ===")
    promedio = archivo.obtener_promedio_notas()
    print(f"Promedio general: {promedio:.2f}")

    print("\n=== MEJORES ESTUDIANTES ===")
    mejores = archivo.buscar_mejores_estudiantes()
    for nota in mejores:
        print(f"Mejor nota: {nota}")

    print("\n=== ELIMINAR POR MATERIA ===")
    materia_eliminar = "Física"
    eliminados = archivo.eliminar_por_materia(materia_eliminar)
    print(f"Eliminados {eliminados} registros de {materia_eliminar}")

    print("\n=== NOTAS DESPUÉS DE ELIMINAR ===")
    archivo.mostrar_todas_notas()
    nuevo_promedio = archivo.obtener_promedio_notas()
    print(f"\nNuevo promedio: {nuevo_promedio:.2f}")


if __name__ == "__main__":
    main()
