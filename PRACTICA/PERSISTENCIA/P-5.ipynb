import json
import os
from typing import List

class Medicamento:
    def __init__(self, nombre: str, codigo: int, tipo: str, precio: float):
        self.nombre = nombre
        self.codigo = codigo
        self.tipo = tipo
        self.precio = precio
    
    def to_dict(self) -> dict:
        return {
            "nombre": self.nombre,
            "codigo": self.codigo,
            "tipo": self.tipo,
            "precio": self.precio
        }
    
    @classmethod
    def from_dict(cls, data: dict) -> 'Medicamento':
        return cls(data["nombre"], data["codigo"], data["tipo"], data["precio"])
    
    def __str__(self) -> str:
        return f"{self.nombre} ({self.tipo}): ${self.precio:.2f}"


class Farmacia:
    def __init__(self, nombreFarmacia: str, nroSucursal: int, direccion: str):
        self.nombreFarmacia = nombreFarmacia
        self.nroSucursal = nroSucursal
        self.direccion = direccion
        self.medicamentos: List[Medicamento] = []
    
    def to_dict(self) -> dict:
        return {
            "nombreFarmacia": self.nombreFarmacia,
            "nroSucursal": self.nroSucursal,
            "direccion": self.direccion,
            "medicamentos": [m.to_dict() for m in self.medicamentos]
        }
    
    @classmethod
    def from_dict(cls, data: dict) -> 'Farmacia':
        farmacia = cls(data["nombreFarmacia"], data["nroSucursal"], data["direccion"])
        farmacia.medicamentos = [Medicamento.from_dict(m) for m in data["medicamentos"]]
        return farmacia
    
    def agregarMedicamento(self, medicamento: Medicamento):
        self.medicamentos.append(medicamento)
    
    def buscarMedicamento(self, nombre: str) -> Medicamento:
        for med in self.medicamentos:
            if med.nombre.lower() == nombre.lower():
                return med
        return None
    
    def __str__(self) -> str:
        return f"Sucursal {self.nroSucursal}: {self.nombreFarmacia} - {self.direccion}"


class ArchFarmacia:
    def __init__(self, nombre_archivo: str = "farmacias.json"):
        self.nombre_archivo = nombre_archivo
        self.farmacias: List[Farmacia] = []
        self.cargar_archivo()
    
    def cargar_archivo(self):
        if os.path.exists(self.nombre_archivo):
            try:
                with open(self.nombre_archivo, 'r', encoding='utf-8') as archivo:
                    datos = json.load(archivo)
                    self.farmacias = [Farmacia.from_dict(d) for d in datos]
            except:
                pass
    
    def guardar_archivo(self):
        try:
            with open(self.nombre_archivo, 'w', encoding='utf-8') as archivo:
                datos = [f.to_dict() for f in self.farmacias]
                json.dump(datos, archivo, indent=4)
        except:
            pass
    
    def agregarFarmacia(self, farmacia: Farmacia):
        self.farmacias.append(farmacia)
        self.guardar_archivo()
    def mostrarMedicamentosTosSucursal(self, nroSucursal: int):
        for farmacia in self.farmacias:
            if farmacia.nroSucursal == nroSucursal:
                print(f"\nMedicamentos para la tos en Sucursal {nroSucursal}:")
                medicamentos_tos = [m for m in farmacia.medicamentos if "tos" in m.tipo.lower()]
                if medicamentos_tos:
                    for med in medicamentos_tos:
                        print(f"  - {med}")
                else:
                    print("  No hay medicamentos para la tos")
                return
        
        print(f"No existe la sucursal {nroSucursal}")

    def mostrarSucursalesConTapsin(self):
        print("\nSucursales con Tapsin:")
        encontrado = False
        for farmacia in self.farmacias:
            for med in farmacia.medicamentos:
                if "tapsin" in med.nombre.lower():
                    print(f"  Sucursal {farmacia.nroSucursal}: {farmacia.direccion}")
                    encontrado = True
                    break
        
        if not encontrado:
            print("  Ninguna sucursal tiene Tapsin")

    def buscarMedicamentosPorTipo(self, tipo: str):
        print(f"\nMedicamentos de tipo '{tipo}':")
        encontrados = False
        for farmacia in self.farmacias:
            for med in farmacia.medicamentos:
                if tipo.lower() in med.tipo.lower():
                    print(f"  Sucursal {farmacia.nroSucursal}: {med}")
                    encontrados = True
        
        if not encontrados:
            print(f"  No hay medicamentos de tipo '{tipo}'")

    def ordenarFarmaciasPorDireccion(self):
        self.farmacias.sort(key=lambda f: f.direccion.lower())
        self.guardar_archivo()
        print("\nFarmacias ordenadas por dirección:")
        for farmacia in self.farmacias:
            print(f"  {farmacia.direccion} - Sucursal {farmacia.nroSucursal}")
    def moverMedicamentosTipo(self, tipo: str, sucursal_origen: int, sucursal_destino: int):
        origen = None
        destino = None
        
        for farmacia in self.farmacias:
            if farmacia.nroSucursal == sucursal_origen:
                origen = farmacia
            if farmacia.nroSucursal == sucursal_destino:
                destino = farmacia
        
        if not origen or not destino:
            print("Error: Una o ambas sucursales no existen")
            return
        
        medicamentos_mover = [m for m in origen.medicamentos if tipo.lower() in m.tipo.lower()]
        
        if not medicamentos_mover:
            print(f"No hay medicamentos de tipo '{tipo}' en la sucursal {sucursal_origen}")
            return
        for med in medicamentos_mover:
            origen.medicamentos.remove(med)
            destino.medicamentos.append(med)
        
        self.guardar_archivo()
        print(f"\nMovidos {len(medicamentos_mover)} medicamentos de tipo '{tipo}'")
        print(f"  De: Sucursal {sucursal_origen} ({origen.nombreFarmacia})")
        print(f"  A: Sucursal {sucursal_destino} ({destino.nombreFarmacia})")
    
    def mostrarTodasFarmacias(self):
        print("\n=== TODAS LAS FARMACIAS ===")
        for farmacia in self.farmacias:
            print(f"\n{farmacia}")
            if farmacia.medicamentos:
                print("  Medicamentos disponibles:")
                for med in farmacia.medicamentos:
                    print(f"    {med}")
            else:
                print("  Sin medicamentos")


