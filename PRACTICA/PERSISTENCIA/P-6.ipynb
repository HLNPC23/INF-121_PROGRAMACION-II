class SistemaBiblioteca:
    def __init__(self):
        self.arch_libros = ArchLibro()
        self.arch_clientes = ArchCliente()
        self.arch_prestamos = ArchPrestamo()
    def listar_libros_por_precio(self, min_precio: float, max_precio: float):
        libros_filtrados = [l for l in self.arch_libros.libros if min_precio <= l.precio <= max_precio]
        print(f"\nLibros entre ${min_precio:.2f} y ${max_precio:.2f}:")
        if libros_filtrados:
            for libro in libros_filtrados:
                print(f"  {libro}")
        else:
            print("  No hay libros en ese rango de precios")
        return libros_filtrados
    def calcular_ingreso_libro(self, codLibro: int):
        libro = self.arch_libros.buscar_libro(codLibro)
        if not libro:
            print(f"Libro con código {codLibro} no encontrado")
            return 0
        
        prestamos_libro = [p for p in self.arch_prestamos.prestamos if p.codLibro == codLibro]
        total_cantidad = sum(p.cantidad for p in prestamos_libro)
        ingreso_total = total_cantidad * libro.precio
        
        print(f"\nLibro: {libro.titulo}")
        print(f"Precio unitario: ${libro.precio:.2f}")
        print(f"Total prestado: {total_cantidad} unidades")
        print(f"Ingreso total: ${ingreso_total:.2f}")
        
        return ingreso_total
    def mostrar_libros_no_prestados(self):
        libros_prestados = {p.codLibro for p in self.arch_prestamos.prestamos}
        libros_no_prestados = [l for l in self.arch_libros.libros if l.codLibro not in libros_prestados]
        
        print("\nLibros nunca prestados:")
        if libros_no_prestados:
            for libro in libros_no_prestados:
                print(f"  {libro}")
        else:
            print("  Todos los libros han sido prestados al menos una vez")
        
        return libros_no_prestados
    def mostrar_clientes_libro(self, codLibro: int):
        libro = self.arch_libros.buscar_libro(codLibro)
        if not libro:
            print(f"Libro con código {codLibro} no encontrado")
            return []
        
        prestamos_libro = [p for p in self.arch_prestamos.prestamos if p.codLibro == codLibro]
        codigos_clientes = {p.codCliente for p in prestamos_libro}
        clientes_encontrados = [c for c in self.arch_clientes.clientes if c.codCliente in codigos_clientes]
        
        print(f"\nClientes que prestaron '{libro.titulo}':")
        if clientes_encontrados:
            for cliente in clientes_encontrados:
                cantidad_prestada = sum(p.cantidad for p in prestamos_libro if p.codCliente == cliente.codCliente)
                print(f"  {cliente} (prestó {cantidad_prestada} unidades)")
        else:
            print(f"  Ningún cliente ha prestado este libro")
        
        return clientes_encontrados
    def libro_mas_prestado(self):
        if not self.arch_prestamos.prestamos:
            print("No hay préstamos registrados")
            return None
        contador_libros = {}
        for prestamo in self.arch_prestamos.prestamos:
            contador_libros[prestamo.codLibro] = contador_libros.get(prestamo.codLibro, 0) + prestamo.cantidad
        cod_libro_mas_prestado = max(contador_libros, key=contador_libros.get)
        libro = self.arch_libros.buscar_libro(cod_libro_mas_prestado)
        cantidad = contador_libros[cod_libro_mas_prestado]
        
        print(f"\nLibro más prestado:")
        print(f"  {libro}")
        print(f"  Total prestado: {cantidad} unidades")
        
        return libro
    def cliente_mas_prestamos(self):
        if not self.arch_prestamos.prestamos:
            print("No hay préstamos registrados")
            return None
        contador_clientes = {}
        for prestamo in self.arch_prestamos.prestamos:
            contador_clientes[prestamo.codCliente] = contador_clientes.get(prestamo.codCliente, 0) + prestamo.cantidad
        cod_cliente_mas_prestamos = max(contador_clientes, key=contador_clientes.get)
        cliente = self.arch_clientes.buscar_cliente(cod_cliente_mas_prestamos)
        cantidad = contador_clientes[cod_cliente_mas_prestamos]
        
        print(f"\nCliente con más préstamos:")
        print(f"  {cliente}")
        print(f"  Total prestado: {cantidad} unidades")
        
        return cliente
    
    def mostrar_todos_datos(self):
        print("\n=== TODOS LOS DATOS ===")
        
        print("\nLibros disponibles:")
        for libro in self.arch_libros.libros:
            print(f"  {libro}")
        
        print("\nClientes registrados:")
        for cliente in self.arch_clientes.clientes:
            print(f"  {cliente}")
        
        print("\nPréstamos registrados:")
        for prestamo in self.arch_prestamos.prestamos:
            print(f"  {prestamo}")


