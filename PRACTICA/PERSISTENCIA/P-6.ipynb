import json
import os
from datetime import datetime
from typing import List, Optional

class Libro:
    def __init__(self, codLibro: int, titulo: str, autor: str, precio: float):
        self.codLibro = codLibro
        self.titulo = titulo
        self.autor = autor
        self.precio = precio
    
    def to_dict(self) -> dict:
        return {
            "codLibro": self.codLibro,
            "titulo": self.titulo,
            "autor": self.autor,
            "precio": self.precio
        }
    
    @classmethod
    def from_dict(cls, data: dict) -> 'Libro':
        return cls(data["codLibro"], data["titulo"], data["autor"], data["precio"])
    
    def __str__(self) -> str:
        return f"{self.codLibro}: {self.titulo} - {self.autor} (${self.precio:.2f})"


class Cliente:
    def __init__(self, codCliente: int, nombre: str, apellido: str):
        self.codCliente = codCliente
        self.nombre = nombre
        self.apellido = apellido
    
    def to_dict(self) -> dict:
        return {
            "codCliente": self.codCliente,
            "nombre": self.nombre,
            "apellido": self.apellido
        }
    
    @classmethod
    def from_dict(cls, data: dict) -> 'Cliente':
        return cls(data["codCliente"], data["nombre"], data["apellido"])
    
    def __str__(self) -> str:
        return f"{self.codCliente}: {self.nombre} {self.apellido}"


class Prestamo:
    def __init__(self, codCliente: int, codLibro: int, fechaPrestamo: str, cantidad: int = 1):
        self.codCliente = codCliente
        self.codLibro = codLibro
        self.fechaPrestamo = fechaPrestamo
        self.cantidad = cantidad
    
    def to_dict(self) -> dict:
        return {
            "codCliente": self.codCliente,
            "codLibro": self.codLibro,
            "fechaPrestamo": self.fechaPrestamo,
            "cantidad": self.cantidad
        }
    
    @classmethod
    def from_dict(cls, data: dict) -> 'Prestamo':
        return cls(data["codCliente"], data["codLibro"], data["fechaPrestamo"], data.get("cantidad", 1))
    
    def __str__(self) -> str:
        return f"Cliente {self.codCliente} -> Libro {self.codLibro} (x{self.cantidad}) - {self.fechaPrestamo}"


class ArchLibro:
    def __init__(self, nomArch: str = "libros.json"):
        self.nomArch = nomArch
        self.libros: List[Libro] = []
        self.cargar_archivo()
    
    def cargar_archivo(self):
        if os.path.exists(self.nomArch):
            try:
                with open(self.nomArch, 'r', encoding='utf-8') as archivo:
                    datos = json.load(archivo)
                    self.libros = [Libro.from_dict(d) for d in datos]
            except:
                pass
    
    def guardar_archivo(self):
        try:
            with open(self.nomArch, 'w', encoding='utf-8') as archivo:
                datos = [l.to_dict() for l in self.libros]
                json.dump(datos, archivo, indent=4)
        except:
            pass
    
    def agregar_libro(self, libro: Libro):
        self.libros.append(libro)
        self.guardar_archivo()
    
    def buscar_libro(self, codLibro: int) -> Optional[Libro]:
        for libro in self.libros:
            if libro.codLibro == codLibro:
                return libro
        return None


