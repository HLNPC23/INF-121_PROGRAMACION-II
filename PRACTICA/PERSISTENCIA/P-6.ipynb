def main():
    sistema = SistemaBiblioteca()
    if not sistema.arch_libros.libros:
        crear_datos_ejemplo(sistema)
    
    print("=== SISTEMA DE BIBLIOTECA ===\n")
    
    sistema.mostrar_todos_datos()
    sistema.listar_libros_por_precio(15, 25)
    sistema.calcular_ingreso_libro(101)
    sistema.mostrar_libros_no_prestados()
    sistema.mostrar_clientes_libro(102)
    sistema.libro_mas_prestado()
