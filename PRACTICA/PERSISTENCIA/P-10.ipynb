import json
import os

class Jugador:
    def __init__(self, nombre: str, nivel: int, puntaje: int):
        self.nombre = nombre
        self.nivel = nivel
        self.puntaje = puntaje
    
    def to_dict(self) -> dict:
        return {
            "nombre": self.nombre,
            "nivel": self.nivel,
            "puntaje": self.puntaje
        }
    
    @classmethod
    def from_dict(cls, data: dict) -> 'Jugador':
        return cls(data["nombre"], data["nivel"], data["puntaje"])
    
    def __str__(self) -> str:
        return f"{self.nombre}: Nivel {self.nivel}, Puntaje {self.puntaje}"


class GestorJugadores:
    def __init__(self, archivo: str = "jugadores.txt"):
        self.archivo = archivo
        self.jugadores: list[Jugador] = []
        self.cargar_jugadores()
    
    def cargar_jugadores(self):
        if not os.path.exists(self.archivo):
            return
        
        try:
            with open(self.archivo, 'r', encoding='utf-8') as f:
                lineas = f.readlines()
                for linea in lineas:
                    linea = linea.strip()
                    if linea:
                        try:
                            datos = json.loads(linea)
                            jugador = Jugador.from_dict(datos)
                            self.jugadores.append(jugador)
                        except:
                            pass
        except:
            pass
    
    def guardar_jugadores(self):
        try:
            with open(self.archivo, 'w', encoding='utf-8') as f:
                for jugador in self.jugadores:
                    datos = json.dumps(jugador.to_dict(), ensure_ascii=False)
                    f.write(datos + '\n')
            return True
        except:
            return False
    
    def agregar_jugador(self, jugador: Jugador):
        self.jugadores.append(jugador)
        self.guardar_jugadores()
        print(f"Jugador {jugador.nombre} agregado exitosamente.")
    
    def mostrar_todos(self):
        print("\n=== TODOS LOS JUGADORES ===")
        if not self.jugadores:
            print("No hay jugadores registrados.")
            return
        
        for i, jugador in enumerate(self.jugadores, 1):
            print(f"{i}. {jugador}")
    
    def buscar_jugador(self, nombre: str):
        for jugador in self.jugadores:
            if jugador.nombre.lower() == nombre.lower():
                return jugador
        return None
    
    def mostrar_jugador(self, nombre: str):
        jugador = self.buscar_jugador(nombre)
        if jugador:
            print(f"\nDatos de {jugador.nombre}:")
            print(f"  Nivel: {jugador.nivel}")
            print(f"  Puntaje: {jugador.puntaje}")
        else:
            print(f"Jugador '{nombre}' no encontrado.")


def main():
    gestor = GestorJugadores()
    if not gestor.jugadores:
        jugadores_ejemplo = [
            Jugador("Akira", 15, 12500),
            Jugador("Shadow", 22, 18750),
            Jugador("Nova", 8, 4200),
            Jugador("Zephyr", 30, 25500),
            Jugador("Luna", 12, 8900)
        ]
        for jugador in jugadores_ejemplo:
            gestor.agregar_jugador(jugador)
    
    print("=== GESTOR DE VIDEOJUEGO ===")
    
    while True:
        print("\n--- MENÚ ---")
        print("1. Mostrar todos los jugadores")
        print("2. Buscar jugador por nombre")
        print("3. Agregar nuevo jugador")
        print("4. Salir")
        
        opcion = input("Opción: ")
        
        if opcion == "1":
            gestor.mostrar_todos()
        
        elif opcion == "2":
            nombre = input("Nombre del jugador a buscar: ")
            gestor.mostrar_jugador(nombre)
        
        elif opcion == "3":
            nombre = input("Nombre: ")
            try:
                nivel = int(input("Nivel: "))
                puntaje = int(input("Puntaje: "))
                jugador = Jugador(nombre, nivel, puntaje)
                gestor.agregar_jugador(jugador)
            except ValueError:
                print("Error: Nivel y Puntaje deben ser números.")
        
        elif opcion == "4":
            print("¡Hasta luego!")
            break
        
        else:
            print("Opción inválida.")


if __name__ == "__main__":
    main()
