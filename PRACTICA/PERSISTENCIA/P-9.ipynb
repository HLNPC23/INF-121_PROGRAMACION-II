import json
import os
from typing import List, Optional

class Animal:
    def __init__(self, especie: str, nombre: str, cantidad: int):
        self.especie = especie
        self.nombre = nombre
        self.cantidad = cantidad
    
    def to_dict(self) -> dict:
        return {
            "especie": self.especie,
            "nombre": self.nombre,
            "cantidad": self.cantidad
        }
    
    @classmethod
    def from_dict(cls, data: dict) -> 'Animal':
        return cls(data["especie"], data["nombre"], data["cantidad"])
    
    def __str__(self) -> str:
        return f"{self.nombre} ({self.especie}): {self.cantidad} ejemplares"


class Zoologico:
    def __init__(self, id: int, nombre: str):
        self.id = id
        self.nombre = nombre
        self.animales: List[Animal] = []
    
    def to_dict(self) -> dict:
        return {
            "id": self.id,
            "nombre": self.nombre,
            "animales": [a.to_dict() for a in self.animales]
        }
    
    @classmethod
    def from_dict(cls, data: dict) -> 'Zoologico':
        zoo = cls(data["id"], data["nombre"])
        zoo.animales = [Animal.from_dict(a) for a in data["animales"]]
        return zoo
    
    def __str__(self) -> str:
        return f"Zoológico {self.id}: {self.nombre} ({len(self.animales)} especies)"
    
    def agregar_animal(self, animal: Animal):
        self.animales.append(animal)
    
    def eliminar_animal(self, nombre_animal: str):
        self.animales = [a for a in self.animales if a.nombre != nombre_animal]
    
    def contar_animales(self) -> int:
        return sum(a.cantidad for a in self.animales)
    
    def esta_vacio(self) -> bool:
        return len(self.animales) == 0


class ArchZoo:
    def __init__(self, archivo: str = "zoologicos.json"):
        self.archivo = archivo
        self.zoologicos: List[Zoologico] = []
        self.cargar()
    
    def cargar(self):
        if os.path.exists(self.archivo):
            try:
                with open(self.archivo, 'r', encoding='utf-8') as f:
                    datos = json.load(f)
                    self.zoologicos = [Zoologico.from_dict(d) for d in datos]
            except:
                self.zoologicos = []
    
    def guardar(self):
        try:
            with open(self.archivo, 'w', encoding='utf-8') as f:
                datos = [z.to_dict() for z in self.zoologicos]
                json.dump(datos, f, indent=4)
            return True
        except:
            return False

    def crear(self, zoologico: Zoologico):
        self.zoologicos.append(zoologico)
        self.guardar()
    
    def modificar(self, id_zoo: int, nuevo_zoo: Zoologico):
        for i, zoo in enumerate(self.zoologicos):
            if zoo.id == id_zoo:
                self.zoologicos[i] = nuevo_zoo
                self.guardar()
                return True
        return False
    
    def eliminar(self, id_zoo: int):
        inicial = len(self.zoologicos)
        self.zoologicos = [z for z in self.zoologicos if z.id != id_zoo]
        if len(self.zoologicos) < inicial:
            self.guardar()
            return True
        return False

    def zoos_mayor_variedad(self) -> List[Zoologico]:
        if not self.zoologicos:
            return []
        
        max_variedad = max(len(z.animales) for z in self.zoologicos)
        return [z for z in self.zoologicos if len(z.animales) == max_variedad]

    def eliminar_zoos_vacios(self):
        vacios = [z for z in self.zoologicos if z.esta_vacio()]
        self.zoologicos = [z for z in self.zoologicos if not z.esta_vacio()]
        if vacios:
            self.guardar()
        return vacios

    def animales_especie(self, especie: str) -> List[Animal]:
        animales = []
        for zoo in self.zoologicos:
            for animal in zoo.animales:
                if animal.especie.lower() == especie.lower():
                    animales.append((zoo, animal))
        return animales

    def mover_animales(self, id_origen: int, id_destino: int, especie: str = None):
        origen = None
        destino = None
        
        for zoo in self.zoologicos:
            if zoo.id == id_origen:
                origen = zoo
            if zoo.id == id_destino:
                destino = zoo
        
        if not origen or not destino:
            return False
        
        animales_a_mover = []
        if especie:
            animales_a_mover = [a for a in origen.animales if a.especie.lower() == especie.lower()]
        else:
            animales_a_mover = origen.animales.copy()
        
        for animal in animales_a_mover:
            origen.animales.remove(animal)
            destino.agregar_animal(animal)
        
        self.guardar()
        return True
    
    def mostrar_todos(self):
        for zoo in self.zoologicos:
            print(f"\n{zoo}")
            if zoo.animales:
                for animal in zoo.animales:
                    print(f"  - {animal}")
            else:
                print("  (Vacío)")


def main():
    archivo = ArchZoo()

    if not archivo.zoologicos:

        leon = Animal("Felino", "León", 5)
        tigre = Animal("Felino", "Tigre", 3)
        elefante = Animal("Mamífero", "Elefante", 4)
        jirafa = Animal("Mamífero", "Jirafa", 2)
        cebra = Animal("Mamífero", "Cebra", 6)
        mono = Animal("Primate", "Mono", 8)
        cocodrilo = Animal("Reptil", "Cocodrilo", 3)

        zoo1 = Zoologico(1, "Zoológico Nacional")
        zoo1.agregar_animal(leon)
        zoo1.agregar_animal(tigre)
        zoo1.agregar_animal(elefante)
        
        zoo2 = Zoologico(2, "Zoológico de la Ciudad")
        zoo2.agregar_animal(jirafa)
        zoo2.agregar_animal(cebra)
        zoo2.agregar_animal(mono)
        
        zoo3 = Zoologico(3, "Zoológico Pequeño")
        zoo3.agregar_animal(cocodrilo)
        
        zoo4 = Zoologico(4, "Zoológico Vacío")
        
        archivo.crear(zoo1)
        archivo.crear(zoo2)
        archivo.crear(zoo3)
        archivo.crear(zoo4)
    
    print("=== SISTEMA DE ZOOLÓGICOS ===")
    
    archivo.mostrar_todos()
    
    print("\n1. Zoológicos con mayor variedad de animales:")
    mayor_variedad = archivo.zoos_mayor_variedad()
    for zoo in mayor_variedad:
        print(f"  {zoo.nombre}: {len(zoo.animales)} especies")

    print("\n2. Eliminando zoológicos vacíos...")
    vacios = archivo.eliminar_zoos_vacios()
    for zoo in vacios:
        print(f"  Eliminado: {zoo.nombre}")
    
    print("\n3. Animales de especie 'Felino':")
    felinos = archivo.animales_especie("Felino")
    for zoo, animal in felinos:
        print(f"  {zoo.nombre}: {animal}")

    print("\n4. Moviendo felinos del Zoológico 1 al Zoológico 2...")
    if archivo.mover_animales(1, 2, "Felino"):
        print("  Animales movidos exitosamente.")
    
    print("\nEstado final:")
    archivo.mostrar_todos()


if __name__ == "__main__":
    main()
