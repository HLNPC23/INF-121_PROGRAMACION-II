        Trabajador("María García", 789012, 3200.50),
        Trabajador("Carlos López", 345678, 1800.75),
        Trabajador("Ana Martínez", 901234, 4100.25),
        Trabajador("Luis Rodríguez", 567890, 2950.00)
    ]
    
    for t in trabajadores_iniciales:
        archivo.guardarTrabajador(t)
