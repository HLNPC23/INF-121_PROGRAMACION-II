import json
import os
from typing import List, Optional

class Trabajador:
    def __init__(self, nombre: str, carnet: int, salario: float):
        self.nombre = nombre
        self.carnet = carnet
        self.salario = salario
    
    def to_dict(self) -> dict:
        return {
            "nombre": self.nombre,
            "carnet": self.carnet,
            "salario": self.salario
        }
    
    @classmethod
    def from_dict(cls, data: dict) -> 'Trabajador':
        return cls(data["nombre"], data["carnet"], data["salario"])
    
    def __str__(self) -> str:
        return f"Trabajador(Nombre: {self.nombre}, Carnet: {self.carnet}, Salario: ${self.salario:.2f})"
    
    def __repr__(self) -> str:
        return self.__str__()


class ArchivoTrabajador:
    def __init__(self, nombreArch: str = "trabajadores.json"):
        self.nombreArch = nombreArch
        self.trabajadores: List[Trabajador] = []
        self.cargar_archivo()
    
    def crearArchivo(self) -> bool:
        try:
            if os.path.exists(self.nombreArch):
                os.remove(self.nombreArch)
            with open(self.nombreArch, 'w', encoding='utf-8') as archivo:
                json.dump([], archivo, indent=4, ensure_ascii=False)
            self.trabajadores = []
            print(f"Archivo '{self.nombreArch}' creado exitosamente.")
            return True
            
        except Exception as e:
            print(f"Error al crear el archivo: {e}")
            return False
    
    def cargar_archivo(self) -> bool:
        if not os.path.exists(self.nombreArch):
            print(f"El archivo '{self.nombreArch}' no existe.")
            return False
        
        try:
            with open(self.nombreArch, 'r', encoding='utf-8') as archivo:
                datos = json.load(archivo)
                self.trabajadores = [Trabajador.from_dict(d) for d in datos]
            print(f"Datos cargados desde '{self.nombreArch}'.")
            return True
            
        except json.JSONDecodeError:
            print(f"Error: El archivo '{self.nombreArch}' no tiene formato JSON válido.")
            return False
        except Exception as e:
            print(f"Error al cargar el archivo: {e}")
            return False
    def guardarTrabajador(self, t: Trabajador) -> bool:
        try:
            self.trabajadores.append(t)
            self._guardar_archivo()
            
            print(f"Trabajador '{t.nombre}' guardado exitosamente.")
            return True
            
        except Exception as e:
            print(f"Error al guardar el trabajador: {e}")
            return False
    def aumentaSalario(self, ai: int, t: Trabajador) -> bool:
        try:
            encontrado = False
            for trabajador in self.trabajadores:
                if trabajador.carnet == t.carnet:
                    aumento = trabajador.salario * (ai / 100)
                    trabajador.salario += aumento
                    self._guardar_archivo()
                    
                    print(f"Salario de '{trabajador.nombre}' aumentado en {ai}%.")
                    print(f"Nuevo salario: ${trabajador.salario:.2f}")
                    
                    encontrado = True
                    return True
            
            if not encontrado:
                print(f"Error: No se encontró al trabajador con carnet {t.carnet}")
                return False
                
        except Exception as e:
            print(f"Error al aumentar el salario: {e}")
            return False
    
    def buscarTrabajadorMayorSalario(self) -> Optional[Trabajador]:
        if not self.trabajadores:
            print("No hay trabajadores registrados.")
            return None
        mayor_salario = max(self.trabajadores, key=lambda t: t.salario)
        return mayor_salario
    
    def ordenarTrabajadoresPorSalario(self, descendente: bool = False) -> List[Trabajador]:
        if not self.trabajadores:
            print("No hay trabajadores para ordenar.")
            return []
        trabajadores_ordenados = sorted(
            self.trabajadores, 
            key=lambda t: t.salario, 
            reverse=descendente
        )
        self.trabajadores = trabajadores_ordenados
        self._guardar_archivo()
        
        orden = "descendente" if descendente else "ascendente"
        print(f"Trabajadores ordenados por salario ({orden}).")
        
        return trabajadores_ordenados
    
    def _guardar_archivo(self) -> bool:
        try:
            with open(self.nombreArch, 'w', encoding='utf-8') as archivo:
                datos = [t.to_dict() for t in self.trabajadores]
                json.dump(datos, archivo, indent=4, ensure_ascii=False)
            return True
        except Exception as e:
            print(f"Error al guardar el archivo: {e}")
            return False
    
    def mostrarTrabajadores(self) -> None:
        if not self.trabajadores:
            print("No hay trabajadores registrados.")
            return
        
        print("\n" + "=" * 60)
        print("LISTA DE TRABAJADORES")
        print("=" * 60)
        for i, trabajador in enumerate(self.trabajadores, 1):
            print(f"{i}. {trabajador}")
        print("=" * 60)
    
    def buscarPorCarnet(self, carnet: int) -> Optional[Trabajador]:
        """Busca un trabajador por número de carnet"""
        for trabajador in self.trabajadores:
            if trabajador.carnet == carnet:
                return trabajador
        return None

