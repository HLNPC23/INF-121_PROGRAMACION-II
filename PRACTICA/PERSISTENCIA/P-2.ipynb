    if mayor_salario:
        print(f"   Trabajador con mayor salario: {mayor_salario}")
    archivo.ordenarTrabajadoresPorSalario(descendente=False)
    archivo.mostrarTrabajadores()
    archivo.ordenarTrabajadoresPorSalario(descendente=True)
    archivo.mostrarTrabajadores()
    
def menu_interactivo():
    archivo = ArchivoTrabajador("trabajadores.json")
    
    while True:
        print("\n" + "=" * 60)
        print("SISTEMA DE GESTIÓN DE TRABAJADORES")
        print("=" * 60)
        print("1. Crear nuevo archivo de trabajadores")
        print("2. Agregar nuevo trabajador")
        print("3. Aumentar salario de un trabajador")
        print("4. Buscar trabajador con mayor salario")
        print("5. Ordenar trabajadores por salario (ascendente)")
        print("6. Ordenar trabajadores por salario (descendente)")
        print("7. Mostrar todos los trabajadores")
        print("8. Buscar trabajador por carnet")
        print("9. Cargar datos de ejemplo")
        print("10. Salir")
        
        opcion = input("\nSeleccione una opción (1-10): ").strip()
        
        if opcion == "1":
            archivo.crearArchivo()
            
        elif opcion == "2":
            print("\n--- Agregar Nuevo Trabajador ---")
            nombre = input("Nombre: ").strip()
            
            try:
                carnet = int(input("Carnet: ").strip())
                salario = float(input("Salario: ").strip())
                
                trabajador = Trabajador(nombre, carnet, salario)
                archivo.guardarTrabajador(trabajador)
            except ValueError:
                print("Error: Carnet y Salario deben ser números válidos.")
                
        elif opcion == "3":
            print("\n--- Aumentar Salario ---")
            try:
                carnet = int(input("Carnet del trabajador: ").strip())
                porcentaje = int(input("Porcentaje de aumento (ej: 10): ").strip())
                
                trabajador_buscar = archivo.buscarPorCarnet(carnet)
                if trabajador_buscar:
                    t_temp = Trabajador("", carnet, 0)
                    archivo.aumentaSalario(porcentaje, t_temp)
                else:
                    print(f"Error: No se encontró trabajador con carnet {carnet}")
            except ValueError:
                print("Error: Carnet y porcentaje deben ser números válidos.")
                
        elif opcion == "4":
            print("\n--- Trabajador con Mayor Salario ---")
            mayor = archivo.buscarTrabajadorMayorSalario()
            if mayor:
                print(f"   {mayor}")
            else:
                print("   No hay trabajadores registrados.")
                
        elif opcion == "5":
            print("\n--- Ordenar Ascendente por Salario ---")
            archivo.ordenarTrabajadoresPorSalario(descendente=False)
            archivo.mostrarTrabajadores()
            
        elif opcion == "6":
            print("\n--- Ordenar Descendente por Salario ---")
            archivo.ordenarTrabajadoresPorSalario(descendente=True)
            archivo.mostrarTrabajadores()
            
        elif opcion == "7":
            print("\n--- Todos los Trabajadores ---")
            archivo.mostrarTrabajadores()
            
        elif opcion == "8":
            print("\n--- Buscar por Carnet ---")
            try:
                carnet = int(input("Ingrese carnet a buscar: ").strip())
                trabajador = archivo.buscarPorCarnet(carnet)
                if trabajador:
                    print(f"\n   {trabajador}")
                else:
                    print(f"   No se encontró trabajador con carnet {carnet}")
            except ValueError:
                print("Error: Carnet debe ser un número válido.")
                
        elif opcion == "9":
            print("\n--- Cargar Datos de Ejemplo ---")
            demostracion()
            
        elif opcion == "10":
            print("\n¡Gracias por usar el sistema! Hasta luego.")
            break
            
        else:
            print("\nOpción inválida. Por favor, seleccione una opción del 1 al 10.")


if __name__ == "__main__":
    demostracion()
