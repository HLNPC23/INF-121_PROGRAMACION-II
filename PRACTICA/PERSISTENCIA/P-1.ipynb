import json
import os
class Charango:
    def __init__(self, material: str, nroCuerdas: int, cuerdas: list):
        self.material = material
        self.nroCuerdas = nroCuerdas
        if len(cuerdas) < 10:
            self.cuerdas = cuerdas + [False] * (10 - len(cuerdas))
        else:
            self.cuerdas = cuerdas[:10]

    def to_dict(self):
        return {
            "material": self.material,
            "nroCuerdas": self.nroCuerdas,
            "cuerdas": self.cuerdas
        }

    @classmethod
    def from_dict(cls, data):
        return cls(data["material"], data["nroCuerdas"], data["cuerdas"])
    
    def cuerdas_false(self):
        return sum(1 for cuerda in self.cuerdas if not cuerda)
    
    def __str__(self):
        cuerdas_str = "".join(["T" if c else "F" for c in self.cuerdas])
        return f"Charango({self.material}, Cuerdas: {self.nroCuerdas}, Estados: {cuerdas_str})"

class GestorCharangos:
    def __init__(self, archivo="charangos.json"):
        self.archivo = archivo
        self.charangos = self.cargar_charangos()
    
    def cargar_charangos(self):
        if not os.path.exists(self.archivo):
            return []
        
        try:
            with open(self.archivo, 'r') as archivo:
                datos = json.load(archivo)
                return [Charango.from_dict(d) for d in datos]
        except (json.JSONDecodeError, FileNotFoundError):
            return []
    
    def guardar_charangos(self):
        with open(self.archivo, 'w') as archivo:
            datos = [charango.to_dict() for charango in self.charangos]
            json.dump(datos, archivo, indent=4)
    
    def agregar_charango(self, charango):
        self.charangos.append(charango)
        self.guardar_charangos()
    
    def eliminar_charangos_cuerdas_false_mayor_6(self):
        inicial = len(self.charangos)
        self.charangos = [c for c in self.charangos if c.cuerdas_false() <= 6]
        eliminados = inicial - len(self.charangos)
        self.guardar_charangos()
        return eliminados
    
    def listar_charangos_material(self, material):
        return [c for c in self.charangos if c.material.lower() == material.lower()]
    
    def buscar_charangos_10_cuerdas(self):
        return [c for c in self.charangos if c.nroCuerdas == 10]
    
    def ordenar_por_material(self):
        self.charangos.sort(key=lambda x: x.material.lower())
        self.guardar_charangos()
        return self.charangos
    
    def mostrar_todos(self):
        for i, charango in enumerate(self.charangos, 1):
            print(f"{i}. {charango}")
    
    def crear_ejemplo(self):
        ejemplos = [
            Charango("Madera", 8, [True, True, False, True, False, False, True, False]),
            Charango("Madera", 10, [True]*10),
            Charango("Plástico", 6, [False]*6),
            Charango("Metal", 10, [False]*8 + [True]*2),
            Charango("Madera", 5, [True, False, True, False, False]),
            Charango("Plástico", 10, [True, False, False, False, False, False, False, False, True, False]),
        ]
        
        for ejemplo in ejemplos:
            self.agregar_charango(ejemplo)

def main():
    gestor = GestorCharangos()
    
    if not gestor.charangos:
        print("Creando datos de ejemplo...")
        gestor.crear_ejemplo()
    
    print("=" * 50)
    print("GESTIÓN DE CHARANGOS")
    print("=" * 50)
    print("\n1. Charangos iniciales:")
    gestor.mostrar_todos()
    print("\n2. Eliminando charangos con más de 6 cuerdas false...")
    eliminados = gestor.eliminar_charangos_cuerdas_false_mayor_6()
    print(f"   Se eliminaron {eliminados} charango(s)")
    print("\n   Charangos después de eliminar:")
    gestor.mostrar_todos()
    print("\n3. Charangos de material 'Madera':")
    charangos_madera = gestor.listar_charangos_material("Madera")
    for i, charango in enumerate(charangos_madera, 1):
        print(f"   {i}. {charango}")
    print("\n4. Charangos con 10 cuerdas:")
    charangos_10 = gestor.buscar_charangos_10_cuerdas()
    for i, charango in enumerate(charangos_10, 1):
        print(f"   {i}. {charango}")
    print("\n5. Ordenando charangos por material")
    gestor.ordenar_por_material()
    print("\n   Charangos ordenados:")
    gestor.mostrar_todos()

def menu_interactivo():
    gestor = GestorCharangos()
    
    while True:
        print("MENÚ DE GESTIÓN DE CHARANGOS")
        print("1. Agregar nuevo charango")
        print("2. Eliminar charangos con >6 cuerdas false")
        print("3. Listar charangos por material")
        print("4. Buscar charangos con 10 cuerdas")
        print("5. Ordenar charangos por material")
        print("6. Mostrar todos los charangos")
        print("7. Crear datos de ejemplo")
        print("8. Salir")
        
        opcion = input("\nSeleccione una opción (1-8): ")
        
        if opcion == "1":
            material = input("Material: ")
            nroCuerdas = int(input("Número de cuerdas: "))
            
            print("Estado de cuerdas (10 valores, T=True, F=False):")
            cuerdas_input = input("Ejemplo: TFTFTFTFTF: ").upper()
            cuerdas = [c == 'T' for c in cuerdas_input[:10]]
            
            charango = Charango(material, nroCuerdas, cuerdas)
            gestor.agregar_charango(charango)
            print("Charango agregado exitosamente!")
            
        elif opcion == "2":
            eliminados = gestor.eliminar_charangos_cuerdas_false_mayor_6()
            print(f"Se eliminaron {eliminados} charango(s)")
            
        elif opcion == "3":
            material = input("Material a buscar: ")
            resultados = gestor.listar_charangos_material(material)
            if resultados:
                for i, c in enumerate(resultados, 1):
                    print(f"{i}. {c}")
            else:
                print(f"No hay charangos de material '{material}'")
                
        elif opcion == "4":
            resultados = gestor.buscar_charangos_10_cuerdas()
            if resultados:
                for i, c in enumerate(resultados, 1):
                    print(f"{i}. {c}")
            else:
                print("No hay charangos con 10 cuerdas")
                
        elif opcion == "5":
            gestor.ordenar_por_material()
            print("Charangos ordenados por material")
            
        elif opcion == "6":
            gestor.mostrar_todos()
            
        elif opcion == "7":
            gestor.crear_ejemplo()
            print("Datos de ejemplo creados")
            
        elif opcion == "8":
            print("¡Hasta luego!")
            break
            
        else:
            print("Opción inválida. Intente nuevamente.")


if __name__ == "__main__":
    main()