import json
import os
from typing import List, Optional

class Producto:
    def __init__(self, codigo: int, nombre: str, precio: float):
        self.codigo = codigo
        self.nombre = nombre
        self.precio = precio
    
    def to_dict(self) -> dict:
        return {
            "codigo": self.codigo,
            "nombre": self.nombre,
            "precio": self.precio
        }
    
    @classmethod
    def from_dict(cls, data: dict) -> 'Producto':
        return cls(data["codigo"], data["nombre"], data["precio"])
    
    def __str__(self) -> str:
        return f"Código: {self.codigo}, Nombre: {self.nombre}, Precio: ${self.precio:.2f}"


class ArchivoProducto:
    def __init__(self, nomA: str = "productos.json"):
        self.nomA = nomA
        self.productos: List[Producto] = []
        self.cargar_archivo()
    
    def crearArchivo(self) -> bool:
        try:
            if os.path.exists(self.nomA):
                os.remove(self.nomA)
            
            with open(self.nomA, 'w', encoding='utf-8') as archivo:
                json.dump([], archivo, indent=4)
            
            self.productos = []
            print(f"Archivo '{self.nomA}' creado.")
            return True
        except Exception as e:
            print(f"Error: {e}")
            return False
    
    def cargar_archivo(self) -> bool:
        if not os.path.exists(self.nomA):
            return False
        
        try:
            with open(self.nomA, 'r', encoding='utf-8') as archivo:
                datos = json.load(archivo)
                self.productos = [Producto.from_dict(d) for d in datos]
            return True
        except:
            return False
    
    def guardaProducto(self, p: Producto) -> bool:
        try:
            for producto in self.productos:
                if producto.codigo == p.codigo:
                    print(f"Ya existe producto con código {p.codigo}")
                    return False
            
            self.productos.append(p)
            self._guardar_archivo()
            print(f"Producto '{p.nombre}' guardado.")
            return True
        except Exception as e:
            print(f"Error: {e}")
            return False
    
    def buscaProducto(self, c: int) -> Optional[Producto]:
        for producto in self.productos:
            if producto.codigo == c:
                return producto
        print(f"No se encontró producto con código {c}")
        return None
    
    def calcularPromedioPrecios(self) -> float:
        if not self.productos:
            return 0.0
        
        total = sum(p.precio for p in self.productos)
        return total / len(self.productos)
    
    def mostrarProductoMasCaro(self) -> Optional[Producto]:
        if not self.productos:
            return None
        
        return max(self.productos, key=lambda p: p.precio)
    
    def _guardar_archivo(self) -> bool:
        try:
            with open(self.nomA, 'w', encoding='utf-8') as archivo:
                datos = [p.to_dict() for p in self.productos]
                json.dump(datos, archivo, indent=4)
            return True
        except:
            return False
    
    def mostrarTodosProductos(self) -> None:
        if not self.productos:
            print("No hay productos.")
            return
        
        print("\n--- LISTA DE PRODUCTOS ---")
        for i, producto in enumerate(self.productos, 1):
            print(f"{i}. {producto}")


def demo():
    archivo = ArchivoProducto()
    archivo.crearArchivo()
    productos = [
        Producto(1, "Laptop", 1500.00),
        Producto(2, "Mouse", 25.50),
        Producto(3, "Teclado", 45.00),
        Producto(4, "Monitor", 300.00),
        Producto(5, "Tablet", 800.00)
    ]
    
    for p in productos:
        archivo.guardaProducto(p)
    archivo.mostrarTodosProductos()
    print("\n--- BUSCAR PRODUCTO ---")
    p = archivo.buscaProducto(3)
    if p:
        print(f"Encontrado: {p}")
    print("\n--- PROMEDIO DE PRECIOS ---")
    promedio = archivo.calcularPromedioPrecios()
    print(f"Promedio: ${promedio:.2f}")
    print("\n--- PRODUCTO MÁS CARO ---")
    caro = archivo.mostrarProductoMasCaro()
    if caro:
        print(f"Producto más caro: {caro}")
def menu():
    archivo = ArchivoProducto()
    
    while True:
        print("\n=== MENÚ ===")
        print("1. Crear archivo nuevo")
        print("2. Agregar producto")
        print("3. Buscar producto")
        print("4. Ver promedio de precios")
        print("5. Ver producto más caro")
        print("6. Ver todos los productos")
        print("7. Salir")
        
        opcion = input("Opción: ")
        
        if opcion == "1":
            archivo.crearArchivo()
        
        elif opcion == "2":
            try:
                codigo = int(input("Código: "))
                nombre = input("Nombre: ")
                precio = float(input("Precio: "))
                producto = Producto(codigo, nombre, precio)
                archivo.guardaProducto(producto)
            except:
                print("Datos inválidos")
        
        elif opcion == "3":
            try:
                codigo = int(input("Código a buscar: "))
                producto = archivo.buscaProducto(codigo)
                if producto:
                    print(f"Producto: {producto}")
            except:
                print("Código inválido")
        
        elif opcion == "4":
            promedio = archivo.calcularPromedioPrecios()
            print(f"Promedio de precios: ${promedio:.2f}")
        
        elif opcion == "5":
            caro = archivo.mostrarProductoMasCaro()
            if caro:
                print(f"Producto más caro: {caro}")
            else:
                print("No hay productos")
        elif opcion == "6":
            archivo.mostrarTodosProductos()
        
        elif opcion == "7":
            break
        
        else:
            print("Opción inválida")


if __name__ == "__main__":
    print("=== SISTEMA DE PRODUCTOS ===")
    respuesta = input("¿Ejecutar demo? (s/n): ")
    if respuesta.lower() == 's':
        demo()
    respuesta = input("¿Usar menú interactivo? (s/n): ")
    if respuesta.lower() == 's':
        menu()

