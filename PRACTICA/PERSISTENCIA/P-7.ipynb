import json
import os
from typing import List, Optional

class Persona:
    def __init__(self, nombre: str, apellidoPaterno: str, apellidoMaterno: str, ci: int):
        self.nombre = nombre
        self.apellidoPaterno = apellidoPaterno
        self.apellidoMaterno = apellidoMaterno
        self.ci = ci
    
    def to_dict(self) -> dict:
        return {
            "nombre": self.nombre,
            "apellidoPaterno": self.apellidoPaterno,
            "apellidoMaterno": self.apellidoMaterno,
            "ci": self.ci
        }
    
    @classmethod
    def from_dict(cls, data: dict) -> 'Persona':
        return cls(data["nombre"], data["apellidoPaterno"], data["apellidoMaterno"], data["ci"])
    
    def __str__(self) -> str:
        return f"{self.nombre} {self.apellidoPaterno} {self.apellidoMaterno} - CI: {self.ci}"


class Niño(Persona):
    def __init__(self, nombre: str, apellidoPaterno: str, apellidoMaterno: str, ci: int, 
                 edad: int, peso: float, talla: float):
        super().__init__(nombre, apellidoPaterno, apellidoMaterno, ci)
        self.edad = edad
        self.peso = peso
        self.talla = talla
    
    def to_dict(self) -> dict:
        base = super().to_dict()
        base.update({
            "edad": self.edad,
            "peso": self.peso,
            "talla": self.talla
        })
        return base
    
    @classmethod
    def from_dict(cls, data: dict) -> 'Niño':
        return cls(
            data["nombre"], data["apellidoPaterno"], data["apellidoMaterno"],
            data["ci"], data["edad"], data["peso"], data["talla"]
        )
    
    def __str__(self) -> str:
        base = super().__str__()
        return f"{base}, Edad: {self.edad} años, Peso: {self.peso} kg, Talla: {self.talla} m"
    
    def peso_adecuado(self) -> bool:
        peso_min = self.edad * 10
        peso_max = self.edad * 15
        return peso_min <= self.peso <= peso_max
    
    def talla_adecuada(self) -> bool:
        talla_min = self.edad * 0.7
        talla_max = self.edad * 0.9
        return talla_min <= self.talla <= talla_max


class ArchNiño:
    def __init__(self, archivo: str = "ninos.json"):
        self.archivo = archivo
        self.ninos: List[Niño] = []
        self.cargar()
    
    def cargar(self):
        if os.path.exists(self.archivo):
            try:
                with open(self.archivo, 'r', encoding='utf-8') as f:
                    datos = json.load(f)
                    self.ninos = [Niño.from_dict(d) for d in datos]
            except:
                self.ninos = []
    
    def guardar(self):
        try:
            with open(self.archivo, 'w', encoding='utf-8') as f:
                datos = [n.to_dict() for n in self.ninos]
                json.dump(datos, f, indent=4)
            return True
        except:
            return False
    def crear(self, niño: Niño):
        self.ninos.append(niño)
        self.guardar()
    
    def leer(self, ci: int) -> Optional[Niño]:
        for niño in self.ninos:
            if niño.ci == ci:
                return niño
        return None
    
    def listar(self):
        for i, niño in enumerate(self.ninos, 1):
            print(f"{i}. {niño}")
    
    def mostrar(self, ci: int):
        niño = self.leer(ci)
        if niño:
            print(niño)
        else:
            print(f"Niño con CI {ci} no encontrado.")
    def contar_peso_adecuado(self) -> int:
        return sum(1 for n in self.ninos if n.peso_adecuado())
    def niños_problema(self) -> List[Niño]:
        return [n for n in self.ninos if not n.peso_adecuado() or not n.talla_adecuada()]
    def promedio_edad(self) -> float:
        if not self.ninos:
            return 0.0
        return sum(n.edad for n in self.ninos) / len(self.ninos)
    def buscar_por_ci(self, ci: int) -> Optional[Niño]:
        return self.leer(ci)
    def niños_talla_mas_alta(self) -> List[Niño]:
        if not self.ninos:
            return []
        
        max_talla = max(n.talla for n in self.ninos)
        return [n for n in self.ninos if n.talla == max_talla]


def main():
    archivo = ArchNiño()
    if not archivo.ninos:
        ninos_ejemplo = [
            Niño("Juan", "Pérez", "García", 123456, 5, 18.0, 1.10),
            Niño("María", "Gómez", "López", 789012, 6, 22.0, 1.20),
            Niño("Carlos", "Rodríguez", "Martínez", 345678, 4, 15.0, 0.95),
            Niño("Ana", "Fernández", "Sánchez", 901234, 7, 25.0, 1.30),
            Niño("Luis", "Torres", "Díaz", 567890, 5, 20.0, 1.15),
            Niño("Sofía", "Ruiz", "Hernández", 112233, 3, 12.0, 0.85),
            Niño("Pedro", "Vargas", "Mendoza", 445566, 8, 30.0, 1.35)
        ]
        for niño in ninos_ejemplo:
            archivo.crear(niño)
    
    print("=== SISTEMA DE NIÑOS ===")
    print("\n1. Lista de todos los niños:")
    archivo.listar()
    print(f"\n2. Niños con peso adecuado: {archivo.contar_peso_adecuado()}")

    print("\n3. Niños con peso o talla inadecuada:")
    for niño in archivo.niños_problema():
        print(f"  {niño.nombre} {niño.apellidoPaterno}")
    print(f"\n4. Promedio de edad: {archivo.promedio_edad():.1f} años")

    print("\n5. Buscar niño con CI 345678:")
    niño = archivo.buscar_por_ci(345678)
    if niño:
        print(f"  Encontrado: {niño}")
    print("\n6. Niños con la talla más alta:")
    for niño in archivo.niños_talla_mas_alta():
        print(f"  {niño}")


if __name__ == "__main__":
    main()
