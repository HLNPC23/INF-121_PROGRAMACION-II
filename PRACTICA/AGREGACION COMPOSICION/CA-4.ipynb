class Ropa:
    def __init__(self, tipo, material):
        self.tipo = tipo
        self.material = material

    def __str__(self):
        return f"{self.tipo} ({self.material})"

class Ropero:
    def __init__(self, material):
        self.material = material
        self.ropa = [None] * 20 
        self.nro_ropas = 0
  
    def adicionar_prendas(self, n, prendas):
        if self.nro_ropas + n > 20:
            print("No hay espacio suficiente en el ropero")
            return        
        for i in range(n):
            if self.nro_ropas < 20:
                self.ropa[self.nro_ropas] = prendas[i]
                self.nro_ropas += 1

    def eliminar_prendas(self, material_x, tipo_y):
        nuevas_prendas = []
        for i in range(self.nro_ropas):
            prenda = self.ropa[i]
            if not (prenda.material == material_x or prenda.tipo == tipo_y):
                nuevas_prendas.append(prenda)
        eliminadas = self.nro_ropas - len(nuevas_prendas)
        self.ropa = nuevas_prendas
        self.nro_ropas = len(nuevas_prendas)
        return eliminadas

    def mostrar_prendas(self, material_x, tipo_y):
        print("Prendas:")
        for i in range(self.nro_ropas):
            prenda = self.ropa[i]
            if prenda.material == material_x or prenda.tipo == tipo_y:
                print(f"- {prenda.tipo} de {prenda.material}")


