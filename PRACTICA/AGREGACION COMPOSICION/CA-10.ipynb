def verificar_persona(evento, nombre, apellido):
    for charla in evento.charlas:
        if charla.speaker.nombre == nombre and charla.speaker.apellido == apellido:
            print(f"{nombre} {apellido} está como SPEAKER en: {charla.nombre_charla}")
            return
        for participante in charla.participantes:
            if participante.nombre == nombre and participante.apellido == apellido:
                print(f"{nombre} {apellido} está como PARTICIPANTE en: {charla.nombre_charla}")
                return
    
    print(f"{nombre} {apellido} NO se encuentra en el evento")

def eliminar_charlas_por_speaker(evento, ci_speaker):
    charlas_a_eliminar = []
    
    for charla in evento.charlas:
        if charla.speaker.ci == ci_speaker:
            charlas_a_eliminar.append(charla)
    
    for charla in charlas_a_eliminar:
        evento.charlas.remove(charla)
        print(f" Eliminada charla: {charla.nombre_charla}")

def ordenar_charlas_por_participantes(evento):
    charlas_ordenadas = sorted(evento.charlas, 
                              key=lambda charla: len(charla.participantes), 
                              reverse=True)
    
    print(" Charlas ordenadas por participantes:")
    for i, charla in enumerate(charlas_ordenadas, 1):
        print(f"   {i}. {charla.nombre_charla} - {len(charla.participantes)} participantes")

