class Empleado:
    def __init__(self, nombre, puesto, salario):
        self.nombre = nombre
        self.puesto = puesto
        self.salario = salario
    
    def __str__(self):
        return f"{self.nombre} - {self.puesto} - ${self.salario}"

class Empresa:
    def __init__(self, nombre):
        self.nombre = nombre
        self.empleados = []
    def agregar_empleado(self, empleado):
        self.empleados.append(empleado)
        print(f"{empleado.nombre} agregado a {self.nombre}")

    def mostrar_informacion(self):
        print(f"\n=== EMPRESA: {self.nombre} ===")
        print(f"Total empleados: {len(self.empleados)}")
        print("Empleados:")
        for empleado in self.empleados:
            print(f"  - {empleado}")
    def buscar_empleado(self, nombre):
        for empleado in self.empleados:
            if empleado.nombre.lower() == nombre.lower():
                return empleado
        return None
    def eliminar_empleado(self, nombre):
        for i, empleado in enumerate(self.empleados):
            if empleado.nombre.lower() == nombre.lower():
                eliminado = self.empleados.pop(i)
                print(f"{eliminado.nombre} eliminado de {self.nombre}")
                return True
        print(f"{nombre} no encontrado en {self.nombre}")
        return False
    
    def promedio_salarial(self):
        if not self.empleados:
            return 0
        total = sum(empleado.salario for empleado in self.empleados)
        return total / len(self.empleados)

    def empleados_salario_mayor(self, salario_minimo):
        resultado = []
        for empleado in self.empleados:
            if empleado.salario > salario_minimo:
                resultado.append(empleado)
        return resultado

empresa = Empresa("Tech Solutions")

empresa.agregar_empleado(Empleado("Ana García", "Desarrollador", 5000))
empresa.agregar_empleado(Empleado("Carlos López", "Gerente", 8000))
empresa.agregar_empleado(Empleado("María Rodríguez", "Diseñador", 4500))
empresa.agregar_empleado(Empleado("Pedro Martínez", "Analista", 6000))

empresa.mostrar_informacion()

print("\n=== BUSCAR EMPLEADO ===")
encontrado = empresa.buscar_empleado("Ana García")
if encontrado:
    print(f"Encontrado: {encontrado}")
else:
    print("Empleado no encontrado")

print("\n=== ELIMINAR EMPLEADO ===")
empresa.eliminar_empleado("María Rodríguez")

print("\n=== ESTADÍSTICAS SALARIALES ===")
promedio = empresa.promedio_salarial()
print(f"Promedio salarial: ${promedio:.2f}")

print("\n=== EMPLEADOS CON SALARIO > $5000 ===")
empleados_altos = empresa.empleados_salario_mayor(5000)
for emp in empleados_altos:
    print(f"  - {emp}")

empresa.mostrar_informacion()
