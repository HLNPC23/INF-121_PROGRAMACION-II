def verificar_duplicados():
    print("\n=== VERIFICACIÓN DUPLICADOS ===")
    for bailarin in todos_bailarines:
        conteo = sum(1 for b in todos_bailarines if b.nombre == bailarin.nombre)
        if conteo > 1:
            print(f"{bailarin.nombre} está en {conteo} fraternidades")
        else:
            print(f"{bailarin.nombre} está en 1 fraternidad")

