class Facultad:
    def __init__(self, nombre):
        self.nombre = nombre

class Fraternidad:
    def __init__(self, nombre, encargado):
        self.nombre = nombre
        self.encargado = encargado
        self.bailarines = []

    def mostrar_encargados(self):
        print("\n=== ENCARGADOS ===")
        print(f"{self.nombre}: {self.encargado}")

class Bailarin:
    def __init__(self, nombre, edad, facultad, fraternidad):
        self.nombre = nombre
        self.edad = edad
        self.facultad = facultad
        self.fraternidad = fraternidad

