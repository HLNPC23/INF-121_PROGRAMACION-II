class FondosInsuficientesException(Exception):
    pass

class CuentaBancaria:
    def __init__(self, numero_cuenta, titular, saldo_inicial=0):
        self.numero_cuenta = numero_cuenta
        self.titular = titular
        self.saldo = saldo_inicial
    def depositar(self, monto):
        if monto <= 0:
            raise IllegalArgumentException("Error: El monto a depositar debe ser positivo")
        self.saldo += monto
        print(f"Depósito exitoso: +${monto}. Saldo actual: ${self.saldo}")
    def retirar(self, monto):
        if monto <= 0:
            raise IllegalArgumentException("Error: El monto a retirar debe ser positivo")
        
        if monto > self.saldo:
            raise FondosInsuficientesException(
                f"Fondos insuficientes. Saldo: ${self.saldo}, Intento de retiro: ${monto}"
            )
        
        self.saldo -= monto
        print(f"Retiro exitoso: -${monto}. Saldo actual: ${self.saldo}")
    
    def mostrar_info(self):
        print(f"\n--- INFORMACIÓN DE LA CUENTA ---")
        print(f"Número de cuenta: {self.numero_cuenta}")
        print(f"Titular: {self.titular}")
        print(f"Saldo: ${self.saldo:.2f}")
class IllegalArgumentException(Exception):
    pass
def main():
    print("=== SISTEMA BANCARIO ===\n")
    cuenta = CuentaBancaria("12345", "Juan Pérez", 1000)
    cuenta.mostrar_info()
    print("\n--- PRUEBA: DEPÓSITO VÁLIDO ---")
    try:
        cuenta.depositar(500)
    except (IllegalArgumentException, FondosInsuficientesException) as e:
        print(f"{e}")
    print("\n--- PRUEBA: DEPÓSITO CON MONTO NEGATIVO ---")
    try:
        cuenta.depositar(-200)
    except IllegalArgumentException as e:
        print(f"{e}")
    
    cuenta.mostrar_info()
    print("\n--- PRUEBA: RETIRO VÁLIDO ---")
    try:
        cuenta.retirar(300)
    except (IllegalArgumentException, FondosInsuficientesException) as e:
        print(f"{e}")
    print("\n--- PRUEBA: RETIRO CON FONDOS INSUFICIENTES ---")
    try:
        cuenta.retirar(2000)
    except FondosInsuficientesException as e:
        print(f"{e}")
    print("\n--- PRUEBA: RETIRO CON MONTO NEGATIVO ---")
    try:
        cuenta.retirar(-100)
    except IllegalArgumentException as e:
        print(f"{e}")
    cuenta.mostrar_info()

if __name__ == "__main__":
    main()
