class ProductoNoEncontradoException(Exception):
    pass

class StockInsuficienteException(Exception):
    pass

class InventarioException(Exception):
    pass

class Producto:
    def __init__(self, codigo, nombre, precio, stock):
        self.codigo = codigo
        self.nombre = nombre
        self.precio = precio
        self.stock = stock
    
    def __str__(self):
        return f"{self.codigo} - {self.nombre} - ${self.precio} - Stock: {self.stock}"

class Inventario:
    def __init__(self):
        self.productos = []
    def agregar_producto(self, producto):
        for prod in self.productos:
            if prod.codigo == producto.codigo:
                raise InventarioException(f"Error: El código {producto.codigo} ya existe")
        if producto.precio < 0:
            raise InventarioException("Error: El precio no puede ser negativo")
        if producto.stock < 0:
            raise InventarioException("Error: El stock no puede ser negativo")
        self.productos.append(producto)
        print(f"Producto {producto.nombre} agregado exitosamente")
    def buscar_producto(self, codigo):
        for producto in self.productos:
            if producto.codigo == codigo:
                return producto
        raise ProductoNoEncontradoException(f"Producto con código {codigo} no encontrado")
    def vender_producto(self, codigo, cantidad):
        producto = self.buscar_producto(codigo)
        
        if cantidad <= 0:
            raise InventarioException("Error: La cantidad debe ser mayor a 0")
        
        if producto.stock < cantidad:
            raise StockInsuficienteException(
                f"Stock insuficiente. Disponible: {producto.stock}, Solicitado: {cantidad}"
            )
        
        producto.stock -= cantidad
        print(f"Vendidas {cantidad} unidades de {producto.nombre}. Stock restante: {producto.stock}")
    
    def mostrar_inventario(self):
        print("\n=== INVENTARIO ACTUAL ===")
        if not self.productos:
            print("No hay productos en el inventario")
        else:
            for producto in self.productos:
                print(f"  - {producto}")
def main():
    inventario = Inventario()
    print("=== SISTEMA DE INVENTARIO ===\n")
    try:
        inventario.agregar_producto(Producto("P001", "Laptop", 1200, 10))
        inventario.agregar_producto(Producto("P002", "Mouse", 25, 50))
        inventario.agregar_producto(Producto("P003", "Teclado", 80, 30))
    except InventarioException as e:
        print(f"{e}")
    inventario.mostrar_inventario()
    print("\n--- PRUEBA: CÓDIGO DUPLICADO ---")
    try:
        inventario.agregar_producto(Producto("P001", "Tablet", 300, 5))
    except InventarioException as e:
        print(f"{e}")
    print("\n--- PRUEBA: PRECIO NEGATIVO ---")
    try:
        inventario.agregar_producto(Producto("P004", "Auriculares", -50, 20))
    except InventarioException as e:
        print(f"{e}")
    print("\n--- PRUEBA: BUSCAR PRODUCTO EXISTENTE ---")
    try:
        producto = inventario.buscar_producto("P002")
        print(f"Encontrado: {producto}")
    except ProductoNoEncontradoException as e:
        print(f"{e}")
    print("\n--- PRUEBA: BUSCAR PRODUCTO NO EXISTENTE ---")
    try:
        producto = inventario.buscar_producto("P999")
        print(f"Encontrado: {producto}")
    except ProductoNoEncontradoException as e:
        print(f"{e}")
    print("\n--- PRUEBA: VENTA EXITOSA ---")
    try:
        inventario.vender_producto("P001", 3)
    except (ProductoNoEncontradoException, StockInsuficienteException, InventarioException) as e:
        print(f"{e}")
    
    inventario.mostrar_inventario()
    print("\n--- PRUEBA: STOCK INSUFICIENTE ---")
    try:
        inventario.vender_producto("P002", 100)
    except StockInsuficienteException as e:
        print(f"{e}")
    print("\n--- PRUEBA: CANTIDAD NEGATIVA ---")
    try:
        inventario.vender_producto("P003", -5)
    except InventarioException as e:
        print(f"{e}")

if __name__ == "__main__":
    main()
